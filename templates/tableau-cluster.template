            "Type": "AWS::EC2::SecurityGroupIngress",
            "DependsOn": [
                "WorkloadSecurityGroup"
            ],
            "Properties": {
                "GroupId": {
                    "Ref": "WorkloadSecurityGroup"
                },
                "IpProtocol": "-1",
                "SourceSecurityGroupId": {
                    "Ref": "WorkloadSecurityGroup"
                }
            }
        },
