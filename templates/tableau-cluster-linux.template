    ParameterGroups:
      - Label:
          default: AWS Environment and Machine Configuration
        Parameters:
          - VpcId
          - PrivateSubnetIds
          - PublicSubnetIds
          - InstanceType
          - WorkerCount
          - KeyPairName
          - AMIOS
          - SourceCIDR
          - ExistingSecurityGroup
